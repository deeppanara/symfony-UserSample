{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="table">
            <div class="table-wrapper">
                <div class="table-title mt-2 mb-2">
                    <div class="row">
                        <div class="col-8">
                            <h2>User <b>Details</b></h2>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>{{ user.roles.0 ?? '-' }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="row">

                                <div class="col-2">
                                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info add-new">edit</a>
                                </div>
                                <div class="col-2">
                                    {{ include('user/_delete_form.html.twig') }}
                                </div>
                                <div class="col-2">
                                    <a href="{{ path('user_index') }}" class="btn btn-secondary float-right">back to list</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>




{% endblock %}
