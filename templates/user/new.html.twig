{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}

<div class="container" >
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card rounded-0 shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col"><h3>Create new User</h3></div>
                    </div>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button class="btn btn-primary">{{ 'Save' }}</button>
                    {{ form_end(form) }}

                    <div class="row">
                        <div class="col "><a href="{{ path('user_index') }}" class="btn btn-secondary float-right">back to list</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
